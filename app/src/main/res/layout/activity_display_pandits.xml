<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <soup.neumorphism.NeumorphTextView
        android:id="@+id/header_disp_pandit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/brahmin_mitra_mandal"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp" />

    <LinearLayout
        android:id="@+id/state_text_spinner"
        android:layout_below="@id/header_disp_pandit_title"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/city_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/state_colon"
            android:textColor="@color/black"
            android:padding="10dp"
            android:textSize="20sp"
            />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/black"
            app:boxBackgroundMode="outline"
            android:id="@+id/city_dropdown"
            >

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                android:contentDescription="@string/year_selection_dropdown"
                android:backgroundTint="@android:color/transparent"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/scroll_view_BMM"
        android:layout_below="@id/state_text_spinner"
        android:layout_above="@id/adView_disp_pandit"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pandit_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/adView_disp_pandit"
                android:layout_marginTop="10dp"
                android:layout_below="@id/state_text_spinner"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="5dp"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_add_data_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/lightGrey">

                <LinearLayout
                    android:id="@+id/add_data_box"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="To Add your Data, Please fill the form below"
                        android:textColor="@color/white"
                        />

                    <Button
                        android:id="@+id/request_data_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="15dp"
                        android:layout_gravity="center"
                        android:text="Click here to fill form"
                        android:textColor="@color/black"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/error_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/state_text_spinner"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:id="@+id/error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/error_message"
            android:textColor="@color/orange_dark"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ProgressBar
            android:id="@+id/loading_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

    </LinearLayout>



    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView_disp_pandit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/pandit_ad_unit_ID">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>