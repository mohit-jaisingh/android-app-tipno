<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddNewPandit"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    android:background="@color/colorPrimary"
    >


    <TextView
        android:id="@+id/header_events_title"
        style="@style/Widget.Neumorph.TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_margin="15dp"
        android:text="Add Pandit Details"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_text"
        android:text="Name"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_events_title"/>

    <EditText
        android:id="@+id/pandit_name_edit_text"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/blue"
        android:hint="Enter Name*"
        android:textColorHint="@color/secondary_text"
        android:textColor="@color/blue"
        app:layout_constraintStart_toEndOf="@+id/address_text"
        app:layout_constraintTop_toBottomOf="@id/header_events_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/address_text"
        android:text="Address"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pandit_name_edit_text"/>

    <EditText
        android:id="@+id/pandit_address_edit_text"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/blue"
        android:hint="Enter Address*"
        android:textColorHint="@color/secondary_text"
        android:textColor="@color/blue"

        app:layout_constraintStart_toEndOf="@+id/address_text"
        app:layout_constraintTop_toBottomOf="@+id/pandit_name_edit_text" />

<!--    TO DO: add dropdown for State and City-->
<!--add pin code edit text-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/state_text"
        android:text="State"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@id/address_text"
        app:layout_constraintTop_toBottomOf="@id/pandit_address_edit_text"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/state_dropdown_text_view"
        android:hint="Select State"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:textColorHint="@color/secondary_text"
        android:gravity="center_vertical"
        android:background="@android:drawable/editbox_background"
        app:layout_constraintStart_toEndOf="@+id/state_text"
        app:layout_constraintTop_toBottomOf="@+id/pandit_address_edit_text"
        app:drawableEndCompat="@drawable/ic_down_arrow" />

<!--    <Spinner-->
<!--        android:id="@+id/state_dropdown_text_view"-->
<!--        android:layout_width="250dp"-->
<!--        android:layout_height="35dp"-->
<!--        android:layout_marginLeft="15dp"-->
<!--        android:layout_marginTop="20dp"-->
<!--        android:background="@android:drawable/editbox_background"-->
<!--        app:layout_constraintStart_toEndOf="@+id/state_text"-->
<!--        android:dropDownSelector="@color/black"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/address_text" />"-->
<!--         />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/city_text"
        android:text="City"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/name_text"
        app:layout_constraintTop_toBottomOf="@id/state_dropdown_text_view"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/city_dropdown_text_view"
        android:hint="Select City"
        app:boxStrokeColor="@color/black"
        android:textColorHint="@color/secondary_text"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/ic_down_arrow"
        android:background="@android:drawable/editbox_background"

        app:layout_constraintStart_toEndOf="@+id/city_text"
        app:layout_constraintTop_toBottomOf="@+id/state_dropdown_text_view"
        />

<!--    <Spinner-->
<!--        android:id="@+id/city_dropdown_text_view"-->
<!--        android:layout_width="150dp"-->
<!--        android:layout_height="35dp"-->
<!--        android:layout_marginStart="15dp"-->
<!--        android:layout_marginTop="20dp"-->
<!--        android:background="@android:drawable/editbox_background"-->
<!--        app:layout_constraintStart_toEndOf="@+id/city_text"-->
<!--        android:dropDownSelector="@color/black"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/state_text" />"-->
<!--    />-->

    <TextView
        android:id="@+id/pin_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:text="PIN"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/city_dropdown_text_view"
        app:layout_constraintTop_toBottomOf="@+id/state_dropdown_text_view" />

    <EditText
        android:id="@+id/entered_pin"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/blue"
        android:hint="Pin Code*"
        android:textColorHint="@color/secondary_text"
        android:textColor="@color/blue"
        app:layout_constraintStart_toEndOf="@+id/pin_text"
        app:layout_constraintTop_toBottomOf="@+id/state_dropdown_text_view" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phone_no_text"
        android:text="Phone No"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/city_dropdown_text_view"/>

    <EditText
        android:id="@+id/pandit_phone_no_edit_text1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:backgroundTint="@color/blue"
        android:hint="Enter Phone no*"
        android:textColorHint="@color/secondary_text"
        android:textColor="@color/blue"
        app:layout_constraintStart_toEndOf="@+id/phone_no_text"
        app:layout_constraintTop_toBottomOf="@+id/city_dropdown_text_view" />

    <EditText
        android:id="@+id/pandit_phone_no_edit_text2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/blue"
        android:hint="Alternate Phone no"
        android:textColorHint="@color/secondary_text"
        android:textColor="@color/blue"
        app:layout_constraintStart_toEndOf="@+id/phone_no_text"
        app:layout_constraintTop_toBottomOf="@+id/pandit_phone_no_edit_text1" />

    <EditText
        android:id="@+id/pandit_phone_no_edit_text3"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/blue"
        android:hint="Alternate Phone no"
        android:textColorHint="@color/secondary_text"
        android:textColor="@color/blue"
        app:layout_constraintStart_toEndOf="@+id/phone_no_text"
        app:layout_constraintTop_toBottomOf="@+id/pandit_phone_no_edit_text2" />

    <EditText
        android:id="@+id/pandit_phone_no_edit_text4"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/blue"
        android:hint="Alternate Phone no"
        android:textColorHint="@color/secondary_text"
        android:textColor="@color/blue"
        app:layout_constraintStart_toEndOf="@+id/phone_no_text"
        app:layout_constraintTop_toBottomOf="@+id/pandit_phone_no_edit_text3" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email_text"
        android:text="Email ID"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pandit_phone_no_edit_text4"/>

    <EditText
        android:id="@+id/pandit_email_edit_text1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/blue"
        android:hint="Enter Email ID*"
        android:textColorHint="@color/secondary_text"
        android:textColor="@color/blue"
        app:layout_constraintStart_toEndOf="@+id/email_text"
        app:layout_constraintTop_toBottomOf="@+id/pandit_phone_no_edit_text4" />

    <EditText
        android:id="@+id/pandit_email_edit_text2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/blue"
        android:hint="Alternate Email ID"
        android:textColorHint="@color/secondary_text"
        android:textColor="@color/blue"
        app:layout_constraintStart_toEndOf="@+id/email_text"
        app:layout_constraintTop_toBottomOf="@+id/pandit_email_edit_text1" />

    <soup.neumorphism.NeumorphButton
        android:id="@+id/add_pandit_button"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@null"
        android:text="Save"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pandit_email_edit_text2" />


</androidx.constraintlayout.widget.ConstraintLayout>